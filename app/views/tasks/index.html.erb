<h1>Liste des tâches</h1>

<ul>
  <% @tasks.each do |t| %>
    <li><%= link_to(t.title, task_path(t)) %>
    <%= link_to('edit', edit_task_path(t)) %>
    <%= link_to "Delete", task_path(t), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </li>
  <% end %>
</ul>

<%= link_to 'Nouvelle tâche', new_task_path %>
