<h1 class='text-center'>Liste des tÃ¢ches</h1>
<div class="container w-50">
  <ul class='list-group'>
    <% @tasks.each do |t| %>
      <li class="list-group-item list-group-item d-flex mb-3 border">
        <%= link_to(t.title, task_path(t), class:'me-auto p-2 link-dark') %>
        <%= link_to edit_task_path(t), class:'p-2 link-warning' do %>
          <i class="fa-solid fa-pen"></i>
        <% end %>
        <%= link_to task_path(t), class:'p-2 link-danger', data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
          <i class="fa-solid fa-trash"></i>
        <% end %>
      </li>
    <% end %>
</ul>
</div>

<p class='text-center fs-2'>
  <%= link_to new_task_path, class:'text-decoration-none link-primary' do %>
    <i class="fa-solid fa-plus"></i>
  <% end %>
</p>
